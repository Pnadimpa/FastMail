@{
    ViewData["Title"] = "FastMail::Mail Tracking System";
}

<form class="container" method="post">
    <div class="row">
        <div class="col-9">
            <div class="shadow px-4 pt-1 pb-5">
                <iframe src="@Url.Content(ViewBag.FilePath)" style="width: 100%; height: 1150px;"></iframe>
            </div>
        </div>
        <div class="col-3 p-3 text-center bg-light border-dark">
            <h5>Preview</h5>
            <p class="alert alert-info">Please make sure the information is accurate.  Click 'Edit' to change the infomation in the label.</p>
            <div class="mt-5">
                <button type="submit" name="submit" value="print" class="btn btn-outline-primary mt-3 w-100">Print</button>
                <a href="@Url.Action("Edit", "Label")" class="btn btn-outline-secondary mt-3 w-100">Edit</a>
                <a href="@Url.Action("Create", "Label")" class="btn btn-outline-success mt-3 w-100">Create New Label</a>
            </div>
        </div>
    </div>
</form>

