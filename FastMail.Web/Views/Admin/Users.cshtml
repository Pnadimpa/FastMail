@{
    ViewData["Title"] = "FastMail::Mail Tracking System";
}
<style>
    tr {
        cursor: pointer;
    }
</style>
<div class="p-0 bg-warning border border-primary-subtle rounded-1">
    <h6 class="text-left fs-1 fw-bold" style="color: #003366;">User Information</h6>
</div><br/> 
@*<div class="mb-4">
    <h5 class="display-6 fw-bold" style="color: #003366">User Information</h5>
</div>*@
<div class="container">
    <form method="post">
        <div class="mb-2 row">
            <label for="Users" class="col-sm-2 col-form-label fw-bold">User Id</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="inputAddress" placeholder="UserId">
            </div>
        </div>
        <div class="mb-2 row">
            <label for="Users" class="col-sm-2 col-form-label fw-bold">User Name</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="inputAddress" placeholder="UserName">
            </div>
        </div>
        <div class="mb-2 row">
            <label for="Email" class="col-sm-2 col-form-label fw-bold">User Email</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="inputEmail" placeholder="UserEmail">
            </div>
        </div>
        <div class="mb-2 row">
            <label for="User" class="col-sm-2 col-form-label fw-bold">User Phone</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="inputAddress" placeholder="UserPhone">
            </div>
        </div>
        <div class="mb-2 row gy-1">
            <label for="User" class="col-sm-2 col-form-label fw-bold">New Password</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="inputAddress" placeholder="New Password">
            </div>
        </div>
        <div class="mb-2 row">
            <label for="User" class="col-sm-2 col-form-label fw-bold">Confirm Password</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="inputAddress" placeholder="Confirm Password">
            </div>
        </div>
        <div class="row my-4">
            <div class="col-sm-1">
                <button type="submit" name="submit" value="submit" class="btn btn-primary">Submit</button>
            </div>
            <div class="col-sm-2">
                <button type="submit" name="submit" value="Change Password" class="btn btn-success">Change Password</button>
            </div>
            <div class="col-sm-2 row gy-0">
                <button type="submit" name="submit" value="cancel" class="btn btn-warning">Cancel</button>
            </div>

        </div>
    </form>
</div>



























